<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="peasysdemo.Views.Login">


        <Border  Stroke="#DCDCDC" StrokeThickness="2" BackgroundColor="LightGray" Margin="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,10,10" />
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="25" Margin="50"  >
                <Image Source="logo.png" WidthRequest="200"/>
                <Label Text="Veuillez renseigner le profil AS400 avec lequel vous souhaitez vous connecter."/>
                <Entry Grid.Row="0" HeightRequest="40" Text="USERDEMO" IsReadOnly="True" WidthRequest="300"/>
                <Entry Grid.Row="0" HeightRequest="40" Text="peasys" IsPassword="True" IsReadOnly="True" WidthRequest="300"/>
                <Button Grid.Row="0" Text="Login" Clicked="HandleLogin" WidthRequest="100"/>
            </VerticalStackLayout>

        </Border>
</ContentPage>